---
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props
const { data, slug } = post
const { date, description, tags, title } = data
---

<article>
  <a href={`/lara-blog/posts/${slug}`} class="group cursor-pointer hover:no-underline">
    <h2 class="group-hover:underline mt-1 line-clamp-2">
      {title}
    </h2>
    <p class="text-gray-800 line-clamp-3">{description}</p>
  </a>

  <div class="flex flex-col-reverse sm:flex-row sm:items-center gap-2 text-sm text-zinc-500">
    <div>{date.toDateString()}</div>
    <div class="hidden sm:block">&#x2022;</div>
    <div class="flex gap-3 uppercase text-xs font-semibold font-sans">
      {
        tags.map(tag => (
          <a class="text-zinc-500" href={`/lara-blog/topics/${tag}`}>
            #{tag}
          </a>
        ))
      }
    </div>
  </div>
</article>
